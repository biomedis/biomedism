<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.biomedis.biomedismair3.Dialogs.TextInputValidationController">
   <children>
      <Label fx:id="contentText" text="%app.msg.input_value" />
      <HBox alignment="TOP_CENTER" spacing="8.0">
         <children>
            <TextField fx:id="input" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" minWidth="50.0" />
            <Button fx:id="btnOk" defaultButton="true" mnemonicParsing="false" onAction="#onSave" text="%app.create" />
            <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#onCancel" text="%app.cancel" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" top="8.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
