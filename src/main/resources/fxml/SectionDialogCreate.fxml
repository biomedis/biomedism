<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:id="rootNode" alignment="center" hgap="10" styleClass="root" vgap="10" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.biomedis.biomedismair3.Dialogs.NameDescroptionDialogController">

    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <Text id="welcome-text" fx:id="contentText" text="%ui.section_dialog.content_text" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="%ui.section_dialog.name" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="nameFld" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="%ui.section_dialog.description" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="saveBtn" defaultButton="true" onAction="#onSave" text="%app.create" />
    </HBox>
   <TextArea fx:id="descriptionFld" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>



</GridPane>
