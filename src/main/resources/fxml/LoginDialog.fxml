<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.biomedis.biomedismair3.social.login.LoginController">
   <children>
      <VBox fx:id="login" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" prefHeight="170.0" spacing="8.0">
         <children>
            <Label text="Email:" />
            <TextField fx:id="emailInput" minWidth="250.0">
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password:" />
            <TextField fx:id="passwordInput" minWidth="250.0">
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="logIn" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onLoginAction" text="Войти">
               <styleClass>
                  <String fx:value="GenericBtn" />
               </styleClass>
            </Button>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
      <VBox fx:id="confirmation" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" prefHeight="170.0" spacing="8.0" visible="false">
         <children>
            <Label text="Введите проверочный код, отправленный на email:" />
            <TextField fx:id="inputCode" />
            <Button fx:id="sendCode" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Отправить" onAction="#onConfirmEmailAction"/>
            <Label fx:id="info" maxWidth="1.7976931348623157E308" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
