                                    <Button mnemonicParsing="false" text="Написать всем подписчикам" />
                                 </children>
                                 <padding>
                                    <Insets left="5.0" right="5.0" />
                                 </padding>
                              </HBox>
                              <HBox maxWidth="1.7976931348623157E308" spacing="8.0">
                                 <padding>
                                    <Insets left="5.0" right="5.0" top="5.0" />
                                 </padding>
                                 <children>
                                    <HBox spacing="3.0">
                                       <children>
                                          <Label text="Контактов:" />
                                          <Label fx:id="contactsCount" text="Label" />
                                       </children>
                                       <HBox.margin>
                                          <Insets right="8.0" />
                                       </HBox.margin>
                                    </HBox>
                                    <HBox spacing="3.0">
                                       <children>
                                          <Label text="Подписчиков" />
                                          <Label fx:id="followersCount" text="Label" />
                                       </children>
                                       <HBox.margin>
                                          <Insets right="8.0" />
                                       </HBox.margin>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" top="5.0" />
                           </padding>
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                        </VBox>
                     </top>
                  </BorderPane>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <top>
                        <Label text="Заголовок чата" BorderPane.alignment="CENTER" />
                     </top>
                     <center>
                        <SplitPane dividerPositions="0.9" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL">
                           <items>
                             <ListView fx:id="messages" />
                              <TextArea maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
