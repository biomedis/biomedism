<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.HTMLEditor?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="400.0" spacing="8.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.biomedis.biomedismair3.social.contacts.lenta.LentaController">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <children>
      <ListView fx:id="elementsList" />
      <HBox maxWidth="1.7976931348623157E308" spacing="8.0">
         <children>
            <Label maxHeight="1.7976931348623157E308" minWidth="100.0" text="Загаловок:" />
            <TextField fx:id="title" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" promptText="Заголовок, не более 120 символов"/>
         </children>
      </HBox>
      <HBox layoutX="18.0" layoutY="259.0" maxWidth="1.7976931348623157E308" spacing="8.0">
         <children>
            <VBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <Label maxHeight="1.7976931348623157E308" minWidth="75.0" text="Картринка:" />
                  <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#selectimageBtn" text="Выбрать" />
                  <Pane maxWidth="1.7976931348623157E308">
                     <children>
                        <ImageView fx:id="image" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">

                        </ImageView>
                     </children>
                     <styleClass>
                        <String fx:value="BlueBorder" />
                     </styleClass>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </Pane>
               </children>
            </VBox>
            <VBox spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label maxWidth="1.7976931348623157E308" text="Кратко:" VBox.vgrow="ALWAYS" />
                  <TextArea fx:id="shortText" maxHeight="1.7976931348623157E308" prefHeight="133.0" prefWidth="692.0" promptText="Краткое описание, не более 400 символов" wrapText="true" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HTMLEditor fx:id="htmlEditor" maxWidth="1.7976931348623157E308" prefHeight="300.0" />
      <HBox spacing="8.0">
         <children>
            <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#send" text="Отправить" />
            <Button fx:id="editBtn" mnemonicParsing="false" onAction="#edit" text="Редактировать" />
            <Button fx:id="deleteBtn" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#delete" text="Удалить" />
         </children>
      </HBox>
   </children>
</VBox>
