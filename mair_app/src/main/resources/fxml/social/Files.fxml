<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.biomedis.biomedismair3.social.registry.FilesController">
   <children>
      <VBox spacing="8.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="8.0">
               <children>
                  <HBox fx:id="pathLine" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <HBox layoutX="10.0" layoutY="10.0" spacing="5.0">
                     <children>
                        <Button fx:id="newDirBtn" mnemonicParsing="false" text="Новая папка" onAction="#onNewDir" />
                        <Button fx:id="newFileBtn" mnemonicParsing="false" text="Загрузить файл" onAction="#onNewFile"/>
                        <Button  mnemonicParsing="false" text="Обновить" onAction="#onSync"/>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </HBox>
            <FlowPane fx:id="container" />
         </children>
      </VBox>
   </children>
</AnchorPane>
